<html>
<head><%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
<%= stylesheet_link_tag 'application.css' %>
	</head>
	<title>Admin</title>
<body>
<div class="main-filter">
  <div class="text-center">
    <div> <h4 style="color:white;"> List of All Categories </h4></div>
  </div>
</div>
<div class="container m-t-15">
<% @categories.each do |category| %>
<ul>
<% if category.ancestry.nil? %>
<li><%= category.name %> <%= link_to "Edit", edit_admin_category_path(category), :class => "btn btn-primary btn-xs" %>
	<%= link_to "show", admin_category_path(category), :class => "btn btn-primary btn-xs" %>
	<br />
<%= render partial: 'subcategory', locals: {subcategories: category.children} if category.children.present? %>
</li>
<% end %>
</ul>
<% end %>
</div>
</body>
</html>